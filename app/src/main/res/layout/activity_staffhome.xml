<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDBD0"
    tools:context=".staffhome">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Enter Staff Id "
        android:textSize="18sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="serif"
        android:text="Staff  page"
        android:textColor="#d2f"
        android:textSize="24sp"
        tools:ignore="HardcodedText,UnknownIdInLayout"
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_reg_design"

        android:fontFamily="serif"
        android:text="Process"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/editText1"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

</RelativeLayout>
