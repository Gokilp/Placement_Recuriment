<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDBD0"

    tools:context=".AddstudentDetails"

   >

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_above="@+id/e2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></Spinner>

    <EditText
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="12dp"
        android:fontFamily="serif"
        android:hint="Student  RollNo"
        android:inputType="text"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignStart="@+id/e1"
        android:layout_below="@+id/e1"
        android:layout_marginTop="18dp"
        android:text="Select Dept"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/e4"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/e5"
        android:layout_alignStart="@+id/e5"
        android:layout_below="@+id/e3"
        android:layout_marginTop="19dp"
        android:hint="Phone No"
        android:inputType="phone"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_alignEnd="@+id/e2"
        android:layout_alignLeft="@+id/e2"
        android:layout_alignRight="@+id/e2"
        android:layout_alignStart="@+id/e2"
        android:layout_below="@+id/e4"
        android:layout_marginTop="17dp"
        android:hint="Gender"
        android:inputType="number"
        android:maxEms="2"
        android:maxLength="10"
        android:minEms="2"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#d2f"
        android:id="@+id/b1"
        android:text="Cancel"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/e4"
        android:layout_toEndOf="@+id/e4" />

    <TextView
        android:id="@+id/textView8"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText,UnknownId,UnknownIdInLayout"
        tools:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        tools:text="              Student  Register" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#d2f"
        android:id="@+id/button"
        android:fontFamily="serif"
        android:text="Submit"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />

    <EditText
        android:id="@+id/e3"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Student DOB"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/e2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="17dp" />

    <EditText
        android:id="@+id/e6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint=" Address"

        android:inputType="textPostalAddress"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/e5"
        android:layout_alignLeft="@+id/e5"
        android:layout_alignStart="@+id/e5"
        android:layout_marginTop="23dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s1"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/e5"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1"></Spinner>

    <EditText
        android:id="@+id/e2"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:hint="Student Name"
        android:inputType="text"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/e3"
        android:layout_alignEnd="@+id/e3" />
</RelativeLayout>
