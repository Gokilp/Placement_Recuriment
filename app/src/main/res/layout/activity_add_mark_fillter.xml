<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDBD0"

    tools:context=".AddcompanyDetails"

   >

    <TextView
        android:id="@+id/textView2"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignStart="@+id/e1"
        android:layout_below="@+id/e1"
        android:layout_marginTop="18dp"
        android:text="type"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_alignRight="@+id/e1"
        android:layout_alignEnd="@+id/e1" />

    <Button
        android:layout_width="wrap_content"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#d2f"
        android:id="@+id/b1"
        android:text="Cancel"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/e4"
        android:layout_toEndOf="@+id/e4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#d2f"
        android:id="@+id/button"
        android:fontFamily="serif"
        android:text="Submit"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/e6"
        android:layout_alignStart="@+id/e6"
        android:layout_marginBottom="13dp" />

    <EditText
        android:id="@+id/e2"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="10th Mark"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/e3"
        android:layout_alignStart="@+id/e3"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="3 rd Year "

        android:inputType="textPostalAddress"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/e5"
        android:layout_alignLeft="@+id/e5"
        android:layout_alignStart="@+id/e5" />

    <EditText
        android:id="@+id/e3"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="12th Mark"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:layout_below="@+id/e2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="2 nd Year %"
        android:inputType="number"
        android:maxEms="2"
        android:maxLength="10"
        android:minEms="2"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/e4"
        android:layout_alignLeft="@+id/e3"
        android:layout_alignStart="@+id/e3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:id="@+id/e6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="arrears"

        android:inputType="textPostalAddress"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/e4"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:hint="1 st Year %"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:inputType="number"
        android:layout_below="@+id/e3"
        android:layout_alignLeft="@+id/e5"
        android:layout_alignStart="@+id/e5" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></Spinner>

    <EditText
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Company Name"
        android:inputType="text"
        android:maxLength="10"
        android:minEms="5"
        android:textSize="23sp"
        android:textStyle="italic"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:fontFamily="serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText,UnknownId,UnknownIdInLayout"
        tools:textColor="@color/colorAccent"
        tools:text="filtration process"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/e1"
        android:layout_alignEnd="@+id/e1" />
</RelativeLayout>
